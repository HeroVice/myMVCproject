<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - MyMVCProject</title>
	<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/myMVCproject.styles.css" asp-append-version="true" />
</head>
<body>
	<header>
		<nav class="navbar navbar-toggleable-sm navbar-dark bg-primary box-shadow mb-3 border-bottom border-white" data-bs-theme="dark">
			<div class="container-fluid">
				<div class="d-flex align-items-center">
					<button class="navbar-toggler me-2" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
							aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
						<span class="navbar-toggler-icon"></span>
					</button>
					<div class="dropdown px-2">
						<a class="nav-link dropdown-toggle text-white" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
							Admin Panel
						</a>
						<ul class="dropdown-menu" aria-labelledby="navbarDropdown">
							<li class="nav-item">
								<a class="dropdown-item" asp-area="Admin" asp-controller="Product" asp-action="Index">Product</a>
							</li>
							<li class="nav-item">
								<a class="dropdown-item" asp-area="Admin" asp-controller="Company" asp-action="Index">Company</a>
							</li>
							<li><a class="dropdown-item" href="#">Seçenek 2</a></li>
							<li><hr class="dropdown-divider"></li>
							<li><a class="dropdown-item" href="#">Ayrı Bir Link</a></li>
						</ul>
					</div>
					<div class="dropdown px-3">
						<a class="nav-link dropdown-toggle text-white" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
							Employer Panel
						</a>
						<ul class="dropdown-menu" aria-labelledby="navbarDropdown">
							<li><a class="dropdown-item text-white" href="#">Seçenek 1</a></li>
							<li><a class="dropdown-item" href="#">Seçenek 2</a></li>
							<li><hr class="dropdown-divider"></li>
							<li><a class="dropdown-item" href="#">Ayrı Bir Link</a></li>
						</ul>
					</div>
				</div>
				<a class="navbar-brand center-navbar-brand" style="text-align:center; position:absolute; top: 0;
					height: 60px; width: 450px; background-color: #0c181f; z-index: 1000; font-size:xx-large" asp-area="" asp-controller="Home" asp-action="Index">Buhar</a>
				<partial name="_loginPartial" />
				<div class="collapse navbar-collapse" id="navbarSupportedContent">
					<ul class="navbar-nav ms-auto flex-row align-items-center">
						<li class="nav-item px-4">
							<a class="nav-link text-white" asp-area="Customer" asp-controller="Home" asp-action="Index">Home</a>
						</li>
						<li class="nav-item border-start px-2">
							<a class="nav-link text-white" asp-area="Customer" asp-controller="Home" asp-action="Catalog">Catalog</a>
						</li>
					</ul>
				</div>
			</div>
		</nav>
	</header>

	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="border-top footer text-muted">
		<div class="container">
			&copy; 2025 - myMVCproject - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
		</div>
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>