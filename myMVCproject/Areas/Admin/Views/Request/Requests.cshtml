@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> UserManager
@model List<MyMVCProject.Models.CompanyRequest>

@{
    ViewData["Title"] = "Company Role Başvuruları";
}

<h2>@ViewData["Title"]</h2>

@if (!Model.Any())
{
    <p>Onay bekleyen başvuru yok.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Kullanıcı ID</th>
                <th>Kullanıcı Email</th>
                <th>Başvuru Tarihi</th>
                <th>Onayla</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var request in Model)
            {
                <tr>
                    <td>@request.UserId</td>
                    <td>
                        @{
                            var user = await UserManager.FindByIdAsync(request.UserId);
                            if (user != null)
                            {
                                @user.Email
                            }
                            else
                            {
                                <em>Kullanıcı bulunamadı</em>
                            }
                        }
                    </td>
                    <td>@request.RequestDate.ToString("g")</td>
                    <td>
                        <form asp-action="ApproveRequest" method="post" asp-controller="Request" asp-area="Admin">
                            <input type="hidden" name="id" value="@request.Id" />
                            <button type="submit" class="btn btn-success btn-sm">Onayla</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
